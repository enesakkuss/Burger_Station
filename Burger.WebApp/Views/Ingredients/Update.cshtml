@model IngredientDto

<h1>Yeni Malzeme Ekle</h1>
<div class="row">
    <div id="ingredient_create" class="col-12 col-sm-10 col-md-6 col-lg-4">
        @if (TempData.ContainsKey("ResultMessage"))
        {
            <div class="alert alert-danger ">
                @TempData["ResultMessage"]
            </div>
        }
        <form asp-action="Update" asp-controller="Ingredients" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Malzeme Adı</label>
                <input asp-for="Name" type="text" class="form-control"></input>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Fiyat</label>
                <input asp-for="Price" type="text" class="form-control"></input>
            </div>
            <div class="mb-3">
                <div class="float-end">
                    <button class="btn btn-success" type="submit">
                        Kaydet
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>